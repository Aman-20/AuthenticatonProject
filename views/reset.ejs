<body>
    <h2>Reset Password</h2>  </br>
    <form action="/reset/<%= token %>" method="post">
        <input type="password" placeholder="enter new password" name="newPassword" required> </br></br>
        <p>Tips: Use combination of letter number and symbols</p> </br></br>
        <input type="submit" value="Reset">
    </form>

</body>

